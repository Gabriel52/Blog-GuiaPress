<%- include('../../partials/header.ejs') %>
<body>
    <%- include('../../partials/homenavbar.ejs') %>
    <div class="container" >
        <hr>
        <% result.articles.rows.forEach(article =>{ %>
           <div class="card">
               <div class="card-header">
                   <h3> <%= article.title %> </h3>
               </div>
               <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-secondary">Ler Artigo</a>
               </div>
           </div><br/>
        <% }) %>

        <div class="row">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a class="btn btn-outline-danger" href="/article/page/<%= result.page - 1 %>" style="float: left;transition: 1s;"><< Preview </a>
                <% }else if(result.page==2){ %> 
                    <a class="btn btn-outline-danger"  href="/" style="float: left;transition: 1s;"><< Preview </a>
                <% } %>   
                <% if(result.next) { %>
                    <a class="btn btn-outline-danger" href="/article/page/<%= result.page + 1 %>" style="float: right; transition:1s;">Next >></a>
                <% } %>    
            </div>
            <hr>
        </div>
        <hr>

    </div>
</body>
<%- include('../../partials/footer.ejs') %>